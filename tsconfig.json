{
  "compilerOptions": {
    /* -- BASE -------------------------------------------------- */
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* -- REACT ------------------------------------------------- */
    "jsx": "react-jsx",          // <<--- FA SPARIRE lâ€™errore '--jsx' is not set
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* -- PATH ALIAS ------------------------------------------- */
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },

  /* File da analizzare: tutta la cartella src + vite.config.ts */
  "include": ["src", "vite.config.ts"]
}